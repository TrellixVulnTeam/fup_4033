[Unit]
Description={{ description }}
{%- if before %}
Before={{ before }}.target
{%- endif %}

[Service]
ExecStart={{ exec }}
{%- if type %}
Type={{ type }}
{%- endif %}
{%- for env_pair in environment %}
{%- for k, v in env_pair.items() %}
Environment={{ k }}={{ v }}
{%- endfor %}
{%- endfor %}
{%- for k, v in service_options.items() %}
{{ k }}={{ v }}
{%- endfor %}

[Install]
WantedBy={{ wanted_by }}.target
